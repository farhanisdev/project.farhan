<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Scientific Calculator With Dark Mode</title>

<style>
    body {
        margin: 0;
        padding: 0;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: "Poppins", sans-serif;
        background: linear-gradient(135deg, #4e54c8, #8f94fb);
        transition: 0.4s;
    }

    body.dark {
        background: linear-gradient(135deg, #0a0a0a, #222);
        color: white;
    }

    .calculator {
        background: rgba(255, 255, 255, 0.15);
        padding: 25px;
        border-radius: 20px;
        backdrop-filter: blur(15px);
        width: 450px;
        transition: 0.4s;
    }

    body.dark .calculator {
        background: rgba(0, 0, 0, 0.4);
    }

    #display {
        width: 100%;
        height: 80px;
        padding: 10px 15px;
        margin-bottom: 20px;
        font-size: 32px;
        border: none;
        border-radius: 12px;
        background: rgba(255,255,255,0.35);
        color: #fff;
        text-align: right;
        white-space: nowrap;
        overflow-x: scroll;
    }

    body.dark #display {
        background: rgba(0,0,0,0.5);
    }

    #display::-webkit-scrollbar {
        height: 6px;
    }
    #display::-webkit-scrollbar-thumb {
        background: rgba(255,255,255,0.5);
        border-radius: 10px;
    }

    .btns {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        gap: 12px;
    }

    button {
        height: 55px;
        font-size: 18px;
        border: none;
        border-radius: 12px;
        background: rgba(255,255,255,0.2);
        color: white;
        cursor: pointer;
        transition: 0.2s;
    }

    button:hover {
        transform: scale(1.07);
        background: rgba(255,255,255,0.35);
    }

    .equal {
        background: #00e676;
        color: black;
        font-weight: bold;
    }
    .equal:hover {
        background: #00c853;
    }

    .clear {
        background: #ff5252;
        font-weight: bold;
    }
    .clear:hover {
        background: #ff1744;
    }

    /* DARK MODE BUTTON */
    .toggle-container {
        text-align: center;
        margin-bottom: 15px;
    }

    .toggle-btn {
        background: black;
        color: white;
        padding: 10px 18px;
        border-radius: 20px;
        border: 2px solid white;
        cursor: pointer;
        transition: 0.3s;
    }

    body.dark .toggle-btn {
        background: white;
        color: black;
        border: 2px solid black;
    }
</style>
</head>

<body>

<div class="calculator">

    <!-- Dark mode toggle -->
    <div class="toggle-container">
        <button class="toggle-btn" onclick="toggleDark()">Dark Mode</button>
    </div>

    <input type="text" id="display" disabled>

    <div class="btns">
        <!-- Scientific Buttons -->
        <button onclick="scientific('sin')">sin</button>
        <button onclick="scientific('cos')">cos</button>
        <button onclick="scientific('tan')">tan</button>
        <button onclick="scientific('sqrt')">√</button>
        <button onclick="scientific('square')">x²</button>

        <button onclick="append('(')">(</button>
        <button onclick="append(')')">)</button>
        <button onclick="append('%')">%</button>
        <button onclick="append('Math.PI')">π</button>
        <button onclick="append('Math.log10(')">log</button>

        <button onclick="append('Math.log(')">ln</button>
        <button onclick="append('Math.pow(10,')">10ˣ</button>
        <button onclick="append('Math.pow(')">xʸ</button>
        <button onclick="append('/')">÷</button>
        <button onclick="append('*')">×</button>

        <!-- Normal buttons -->
        <button onclick="append('7')">7</button>
        <button onclick="append('8')">8</button>
        <button onclick="append('9')">9</button>
        <button onclick="append('-')">−</button>
        <button onclick="append('+')">+</button>

        <button onclick="append('4')">4</button>
        <button onclick="append('5')">5</button>
        <button onclick="append('6')">6</button>
        <button class="clear" onclick="clearDisplay()">C</button>
        <button onclick="append('.')">.</button>

        <button onclick="append('1')">1</button>
        <button onclick="append('2')">2</button>
        <button onclick="append('3')">3</button>
        <button onclick="append('0')" style="grid-column: span 2;">0</button>
        <button class="equal" onclick="calculate()" style="grid-column: span 2;">=</button>
    </div>
</div>

<script>
    function append(value) {
        let display = document.getElementById('display');
        display.value += value;
        display.scrollLeft = display.scrollWidth;
    }

    function scientific(type) {
        let display = document.getElementById('display');

        if (type === 'sin') display.value += "Math.sin(";
        if (type === 'cos') display.value += "Math.cos(";
        if (type === 'tan') display.value += "Math.tan(";
        if (type === 'sqrt') display.value += "Math.sqrt(";
        if (type === 'square') display.value += "**2";

        display.scrollLeft = display.scrollWidth;
    }

    function clearDisplay() {
        document.getElementById('display').value = '';
    }

    function calculate() {
        try {
            let result = eval(document.getElementById('display').value);
            document.getElementById('display').value = result;
        } catch {
            document.getElementById('display').value = "Error";
        }
    }

    function toggleDark() {
        document.body.classList.toggle("dark");
    }
</script>

</body>
</html>
